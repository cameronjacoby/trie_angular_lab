{{words.greeting}}

<h1>Dictionary App</h1>

<h3>Add a New Word</h3>

<form ng-submit="words.addWord(word)">
  <input type="text" ng-model="word.term" placeholder="Term", autofocus required>
  <input type="text" ng-model="word.definition" placeholder="Definition" required>
  <button>Add Word</button>
</form>

<h3>Word List</h3>

<div ng-repeat="word in wordList">
  <h4>{{word.term}}</h4>
  <p>{{word.definition}}</p>
</div>